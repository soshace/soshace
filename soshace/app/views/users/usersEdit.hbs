<div class="content-center">
    <div class="user">
        {{> usersTabs}}
        <div class="user__profile">
            <form class="js-form"
                  data-user-name="{{user.userName}}"
                  data-_id="{{user._id}}"
                  data-locale="{{user.locale}}">
                <div class="user__profile__save-message js-save-messages hide"></div>
                <div class="user__profile__block clearfix">
                    <label class="user__profile__block__description">{{i18n 'Your photo'}}:</label>

                    <div class="user__profile__block__control">
                        <div class="user__profile__info__avatar__img clearfix">
                            {{#if user.profileImg}}
                                <img src="{{user.profileImg}}"/>
                            {{else}}
                                <span class="glyphicon glyphicon-user"></span>
                            {{/if}}
                        </div>
                        <div class="user__profile__info__avatar__update">
                            <label for="profileImg">{{i18n 'Update photo'}}</label>
                            <input type="file" id="profileImg" name="profileImg"/>
                        </div>
                    </div>
                </div>
                <div class="user__profile__block clearfix">
                    <label class="user__profile__block__description" for="firstName">{{i18n 'First name'}}:</label>

                    <div class="user__profile__block__control">
                        <input class="form-control" type="text" id="firstName" name="firstName"
                               value="{{user.firstName}}"/>
                    </div>
                </div>
                <div class="user__profile__block clearfix">
                    <label class="user__profile__block__description" for="lastName">{{i18n 'Last name'}}:</label>

                    <div class="user__profile__block__control">
                        <input class="form-control" type="text" id="lastName" name="lastName"
                               value="{{user.lastName}}"/>
                    </div>
                </div>
                <div class="user__profile__block clearfix">
                    <label class="user__profile__block__description" for="sex">{{i18n 'Sex'}}:</label>

                    <div class="user__profile__block__control">
                        <select id="sex" name="sex" class="form-control">
                            {{#each sexList}}
                                <option {{#if selected}}selected="selected"{{/if}}
                                        value="{{value}}">{{i18n title}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="user__profile__block clearfix">
                    <label class="user__profile__block__description" for="birthdayDate">{{i18n 'Birthday'}}:</label>

                    <div class="user__profile__block__control js-birthday-calendar clearfix">
                        {{> jquery/calendar/calendar}}
                    </div>
                </div>
                <div class="user__profile__about-author user__profile__block clearfix">
                    <label class="user__profile__block__description" for="aboutAuthor">{{i18n 'About myself'}}:</label>

                    <div class="user__profile__block__control">
                        <textarea id="aboutAuthor" name="aboutAuthor" class="form-control">{{user.aboutAuthor}}</textarea>
                    </div>
                </div>
                <div class="user__profile__block__save">
                    <button type="submit" class="btn btn-primary js-user-save">{{i18n 'Save'}}</button>
                </div>
            </form>
            {{#if isDisabled}}
                <div class="disable-cover">
                    <div class="disable-cover__bg"></div>
                    <div class="disable-cover__ban">
                        <span class="glyphicon glyphicon-ban-circle"></span>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>